`timescale 1 ps/ 1 ps
module g21_show_score_vlg_sample_tst(
	score,
	sampler_tx
);
input [1:0] score;
output sampler_tx;

reg sample;
time current_time;
always @(score)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module g21_show_score_vlg_check_tst (
	led_on,
	sampler_rx
