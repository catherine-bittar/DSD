begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	led_on_prev = led_on;
end

// update expected /o prevs

always @(trigger)
begin
	led_on_expected_prev = led_on_expected;
end


